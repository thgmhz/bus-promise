{
  "name": "sptrans-promise",
  "author": "Thiago M. Medeiros",
  "description": "Busca informações em tempo real da frota de ônibus da SPTrans na cidade de São Paulo.",
  "version": "1.0.3",
  "license": "MIT",
  "main": "build/server/index.js",
  "homepage": "https://github.com/thiagommedeiros/sptrans-promise",
  "scripts": {
    "build-node": "babel src --out-dir build/server",
    "build-web": "browserify src/index.js -s sptrans -o | uglifyjs > build/browser/sptrans-promise.min.js",
    "build": "mkdir -p build/browser && mkdir -p build/server && npm run build-node && npm run build-web",
    "lint": "eslint --config ./.eslintrc src/ test/",
    "test": "npm run test-unit && npm run test-integration",
    "test-unit": "./node_modules/ava/cli.js 'test/unit/**/*.test.js'",
    "test-integration": "./node_modules/ava/cli.js 'test/integration/**/*.test.js'",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thiagommedeiros/sptrans-promise.git"
  },
  "devDependencies": {
    "ava": "^0.19.0",
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.3.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-plugin-import": "^2.2.0",
    "uglify-js": "^2.8.22"
  },
  "dependencies": {
    "axios": "^0.16.0"
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ],
          "plugins": [
            "add-module-exports"
          ]
        }
      ]
    ]
  }
}
